<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- No Produksi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Produksi"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNoProduksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@android:drawable/edit_text"
                android:inputType="text" />

            <!-- No Chasis Kanban -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Chasis Checksheet"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtNoChasisKanban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@android:drawable/edit_text"
                android:inputType="text" />

            <!-- No Chasis Scan (OCR) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Chasis Scan"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtNoChasisScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@android:drawable/edit_text"
                android:inputType="text" />

            <!-- Tombol QR Scan dan Kamera OCR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/scanQRBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scan QR"
                    android:backgroundTint="@color/light_pink"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/captureImgBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ambil Gambar OCR"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/light_pink"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Preview Kamera -->
            <ImageView
                android:id="@+id/cameraImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="#CCCCCC"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_image_24"
                />

            <!-- Tombol Submit -->
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Data"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/light_pink"
                android:textColor="@android:color/white" />

            <!-- Badge Status -->
            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingVertical="30dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_badge_default"
                android:textSize="50sp"
                android:textColor="@android:color/white"
                android:elevation="6dp"
                android:translationZ="6dp"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:visibility="gone" />


            <!-- Spacer untuk bottom nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/light_pink"
        app:itemTextColor="@color/light_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

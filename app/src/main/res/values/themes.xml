<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IsekiChadet" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/light_pink</item>
        <item name="android:colorPrimaryDark">@color/dark_pink</item>
        <item name="android:colorBackground">@color/yellow</item>
        <item name="android:statusBarColor">@color/peach</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Custom ActionBar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/light_pink</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <!-- Title text style -->
    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>